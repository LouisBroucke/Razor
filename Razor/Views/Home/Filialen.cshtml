@model List<Filiaal>
<h2>Filialen</h2>
<ul>
    @foreach (var filiaal in Model)
    {
        var url = Url.Action("Verwijderen", "Home", new { ID = filiaal.ID });

        <li>@filiaal.ID @filiaal.Naam 
            @Html.DisplayFor(m => filiaal.Gebouwd) 
            @Html.DisplayFor(m => filiaal.Waarde) 
            @Html.DisplayFor(m => filiaal.Eigenaar)
            @*<a href="@url">Verwijderen</a>*@
            <a asp-action="Verwijderen" asp-controller="Home" asp-route-id="@filiaal.ID"><img src="~/images/delete.png" alt="delete" /></a>
        </li>
    }
</ul>